<form>
  <label>Peer Migration Progress</label>
  <fieldset submitButton="false">
    <input type="dropdown" token="splunk_server" searchWhenChanged="true">
      <label>Indexer</label>
      <search>
        <query>| inputlookup migratory_indexers.csv</query>
      </search>
      <fieldForLabel>splunk_server</fieldForLabel>
      <fieldForValue>guid</fieldForValue>
    </input>
  </fieldset>
  <row>
    <panel>
      <table>
        <title>Full Table</title>
        <search id="selected_master_buckets">
          <query>| rest /services/cluster/master/buckets splunk_server=local
| search title="*$splunk_server$"</query>
          <earliest>0</earliest>
          <latest></latest>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="count">10</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <single>
        <title>Total Buckets Originating at Indexer</title>
        <search base="selected_master_buckets">
          <query>stats count</query>
          <earliest>0</earliest>
          <latest></latest>
        </search>
        <option name="drilldown">none</option>
      </single>
    </panel>
    <panel>
      <single>
        <title>Standalone Bucket Count</title>
        <search base="selected_master_buckets">
          <query>search standalone=1 | stats count | rangemap field=count low=0-0 default=severe</query>
          <earliest>0</earliest>
          <latest></latest>
        </search>
        <option name="drilldown">none</option>
        <option name="colorBy">value</option>
        <option name="colorMode">none</option>
        <option name="numberPrecision">0</option>
        <option name="showSparkline">1</option>
        <option name="showTrendIndicator">1</option>
        <option name="trendColorInterpretation">standard</option>
        <option name="trendDisplayMode">absolute</option>
        <option name="useColors">0</option>
        <option name="useThousandSeparators">1</option>
        <option name="linkView">search</option>
      </single>
    </panel>
    <panel>
      <single>
        <title>Frozen Buckets</title>
        <search base="selected_master_buckets">
          <query>search frozen=1 | stats count | rangemap field=count low=0-0 default=severe</query>
          <earliest>0</earliest>
          <latest></latest>
        </search>
        <option name="drilldown">none</option>
      </single>
    </panel>
  </row>
</form>
